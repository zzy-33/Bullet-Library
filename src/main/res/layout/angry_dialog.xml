<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/black"
    tools:theme="@style/Theme.Dialog.red">

    <LinearLayout
        android:id="@+id/angry_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="?attr/dialog_main_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/angry_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textColor="?attr/dialog_view_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/angry_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="100dp"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:paddingEnd="30dp"
            android:paddingBottom="20dp"
            android:textColor="?attr/dialog_view_content"
            android:textSize="15sp"
            tools:text="questionnaire_failed_text2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dialog_view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/dialog_view_height"
            android:layout_marginBottom="?attr/dialog_view_marginBottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/angry_dialog_cancel"
                android:layout_width="?attr/dialog_view_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="?attr/dialog_view_cancel_marginEnd"
                android:layout_weight="?attr/dialog_view_weight"
                android:background="?attr/dialog_view_cancel_bg"
                android:gravity="center"
                android:textColor="?attr/dialog_view_cancel"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Cancel" />

            <View
                android:id="@+id/angry_dialog_vertical_view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?attr/dialog_view_line" />

            <TextView
                android:id="@+id/angry_dialog_confirm"
                android:layout_width="?attr/dialog_view_width"
                android:layout_height="match_parent"
                android:layout_weight="?attr/dialog_view_weight"
                android:background="?attr/dialog_view_ok_bg"
                android:gravity="center"
                android:textColor="?attr/dialog_view_ok"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="OK" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
