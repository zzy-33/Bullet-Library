<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/switch_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_radius_5"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF333333"
            android:textSize="18sp"
            tools:text="Dialog By EditText" />

        <EditText
            android:id="@+id/dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:hint="Please Enter"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#FF333333"
            android:textColorHint="#FF999999" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:lineSpacingExtra="1dp"
            android:padding="10dp"
            android:text="邀请码填写须知：\n\n1、填写邀请码注册登录，双方赠送1天\n\n2、被邀请人购买任意会员，双方赠送8天\n\n3、邀请码是重要信息，请谨慎填写\n\n4、邀请码只能填写一次，无法修改"
            android:textColor="#FF666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/grey_radiu_10"
            android:gravity="center"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
